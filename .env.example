# MaWi Gateway - Environment Configuration
# Copy this to .env and customize for your environment

# ======================
# DATABASE
# ======================
DATABASE_URL=postgresql://mawi:MAWI_PASSWORD@localhost:5432/mawi

# ======================
# SECURITY (CRITICAL)
# ======================
# Master encryption key - REQUIRED in production
# Generate with: openssl rand -hex 32
MAWI_MASTER_KEY=

# Database password - change in production
POSTGRES_PASSWORD=MAWI_PASSWORD

# ======================
# SERVER
# ======================
PORT=8030
RUST_LOG=info

# ======================
# CORS
# ======================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# ======================
# FEATURES
# ======================
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# ======================
# FRONTEND
# ======================
NEXT_PUBLIC_API_URL=http://localhost:8030
INTERNAL_API_URL=http://mawi-api:8030
